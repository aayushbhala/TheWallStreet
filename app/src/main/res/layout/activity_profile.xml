<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.thestreet.ProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/worthless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Last Updated:"
        android:textSize="18sp"/>
    <LinearLayout
        android:id="@+id/date_time"
        android:paddingTop="20dp"
        android:layout_below="@+id/worthless"
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textSize="40sp"
                android:paddingRight="10dp"
                tools:text="8" />

            <TextView
                android:id="@+id/st_nd_rd_th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/date"
                android:paddingTop="20dp"
                tools:text="th" />
        </RelativeLayout>
        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "May"
            android:paddingLeft="25dp"
            android:textSize="40sp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "16:01"
            android:textSize="40sp"
            android:paddingLeft="40dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_time">

        <TextView
            android:id="@+id/cur_worth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="Current Worth"
            android:paddingBottom="15dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/current_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            tools:text="12345567"
            android:layout_below="@+id/cur_worth"
            android:paddingBottom="20dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_balance"
            android:text="Max Gainer:"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/max_gainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/best"
            android:textColor="#000000"
            android:textSize="15sp"
            android:maxLength="23"
            tools:text="Suzlon" />

        <TextView
            android:id="@+id/max_gainer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/max_gainer"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            tools:text="123456" />
        <TextView
            android:id="@+id/worst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_balance"
            android:layout_alignParentRight="true"
            android:text="Min Gainer:"
            android:paddingBottom="15dp"/>
        <TextView
            android:id="@+id/min_gainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/worst"
            android:textColor="#000000"
            android:maxLength="23"
            android:textSize="15sp"
            tools:text="Rolta" />

        <TextView
            android:id="@+id/min_gainer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/min_gainer"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            tools:text="3289" />

    </RelativeLayout>
    </RelativeLayout>
</ScrollView>
